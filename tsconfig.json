{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["worker/**/*", "convex/**/*"],
  "exclude": ["node_modules", "dist", "convex/_generated"]
}
